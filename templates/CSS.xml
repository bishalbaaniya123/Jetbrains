<templateSet group="CSS">
  <template name="defhex" value="#6A529A" description="Default Hex" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="CSS" value="true" />
    </context>
  </template>
  <template name="torem" value="$VAR$rem" description="change px to rem" toReformat="false" toShortenFQNames="true">
    <variable name="VAR" expression="blockCommentEnd(VAR)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="CSS" value="true" />
    </context>
  </template>
</templateSet>